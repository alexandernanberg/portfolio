{
  "name": "alexandernanberg",
  "type": "static",
  "alias": "alexandernanberg.com",
  "files": ["public"],
  "static": {
    "public": "public",
    "headers": [
      {
        "source": "*",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          }
        ]
      },
      {
        "source": "**/*.@(html|gz|js|css)",
        "headers": [
          {
            "key": "Vary",
            "value": "Accept-Encoding"
          }
        ]
      },
      {
        "source": "/static/*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ]
  }
}
